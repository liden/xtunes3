<ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>

<%= form_for(@user) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>

  <% if !current_user.nil? && current_user.admin %>
    <div class="field">
      <%= f.label :admin %><br />
      <%= f.check_box :admin %><br />
  </div>

  <% else %>

  <div class="field">
    <%= f.label 'gender' %><br />
    <%= radio_button('user', 'gender', 'female') %> female
    <%= radio_button('user', 'gender', 'male') %> male
  </div>

  <div class="field">
    <%= f.label 'age' %><br />
    <%= f.number_field 'age' %>
  </div>

  <div class="field">
    <%= f.label 'avatar_file' %><br />
    <%= f.file_field 'avatar_file' %>
  </div>

  <div class="field">
    <%= f.label :remote_avatar_file_url, 'or add image URL' %><br />
    <%= f.text_field :remote_avatar_file_url %>
  </div>

  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>