<h1>Edit Profile</h1>

<%= form_for @user do |f| %>

  <div class="field">
    <%= f.label 'name' %><br />
    <%= f.text_field 'name' %>
  </div>

  <div class="field">
    <%= f.label 'email' %><br />
    <%= f.text_field 'email' %>
  </div>

  <div class="field">
    <%= f.label 'gender' %><br />
    <%= radio_button('user', 'gender', 'female') %> female
    <%= radio_button('user', 'gender', 'male') %> male
  </div>

  <div class="field">
    <%= f.label 'age' %><br />
    <%= f.number_field 'age' %>
  </div>

  <div class="field">
    <%= f.label 'avatar' %><br />
    <%= f.file_field 'avatar' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>