<p id="notice"><%= notice %></p>

<div class="pull-right">
  <small>
    <% if admin_user %>
      <%= link_to 'New user', new_user_path %> |
      <%= link_to 'View users', users_path %><br/>
      <%= link_to 'Edit', edit_user_path(@user) %> |
      <%= link_to 'Delete', @user, method: :delete, data: { confirm: 'Are you sure?' } %> |
    <% end %>
  </small>
</div>


<h4><%= @user.name %></h4>

  <div class="row-fluid">
    <div class="span3">

        <%= image_tag(@user.avatar_file_url.to_s, :size => "175x175", :class => "img-polaroid") %>

    </div>

    <div class="span9">
    <h6>User Info</h6>

      <table class="table table-condensed table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td><%= @user.name %></td>
            <td><%= @user.email %></td>
            <td><%= @user.age %></td>
            <td><%= @user.gender %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>