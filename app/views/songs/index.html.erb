<% if admin_user %>
  <div class="pull-right">
    <small><%= link_to 'Add a song', new_song_path %> </small>
  </div>
<% end %>

<div>

  <h4>xTunes Songs</h4>

  <div class="pull-right">
    <%= search_form_for @search do |f| %>

      <div class="form-inline">
        <%= f.text_field :name_cont %>
        <%= f.submit 'song title contains', :class => 'btn btn-info' %>
      </div>
    <% end %>
  </div>

  <div class="row-fluid" "span12">

    <table class="table table-condensed table-hover">

      <thead>
        <tr>
          <th><%= sort_link @search, :name, "Song" %></th>
          <th><%= sort_link @search, :artists_name, "Artist" %></th>
          <th><%= sort_link @search, :albums_name, "Album" %></th>
          <th><%= sort_link @search, :genres_name, "Genre" %></th>
          <th><%= sort_link @search, :price, "Price" %></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= render :partial => 'shared/song', :collection => @songs, :as => :song %>
      </tbody>
    </table>
  </div>

</div>