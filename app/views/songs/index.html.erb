<h1>Songs Listing</h1>

<table>
  <tr>
    <th>Name</th>

    <th>Artists</th>
    <th>Albums</th>
    <th>Genres</th>
    <th>Price</th>
    <th>Details</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>

<% @songs.each do |song| %>
  <tr>
    <td><%= song.name %></td>
    <td>
      <% song.artists.each do |art|%>
        <%= art.name %>
      <% end %>
    </td>
    <td>
      <% song.albums.each do |alb|%>
        <%= alb.name %>
      <% end %>
    </td>
    <td>
    <% song.genres.each do |gen|%>
        <%= gen.name %>
      <% end %>
    </td>

    <td><%= number_to_currency(song.price) %></td>

    <td><%= link_to 'Show', song %></td>
    <td><%= link_to 'Edit', edit_song_path(song) %></td>
    <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Song', new_song_path %>