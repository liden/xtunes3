<%= form_for(@song) do |f| %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :audiofile %><br />
    <%= f.file_field :audiofile %>
  </div>
  <div class="field">
  <h4>Artists</h4>
    <% Artist.all.each do |a| %>
  <br>
    <%= check_box_tag a.name, a.id %>
    <%= a.name %>
  <% end %>
  </div>
  <div class="field">
    <%= f.label :album %>
    <%= f.select :album_id, Album.all.map{ |album| [album.name, album.id]} %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
