<% if current_user %>
  <div class="pull-right">
    <small><%= link_to 'Add a mixtape', new_mixtape_path %> </small>
  </div>
<% end %>

<div>
  <h4><%= current_user.name %>'s xTunes Mixtapes</h4>

  <div class="row-fluid" "span12">

    <table class="table table-condensed table-hover">
      <thead>
        <tr>
          <th>Mixtape</th>
          <th>Song</th>
          <th></th>
        </tr>
      </thead>

      <% current_user.mixtapes.each do |mixtape| %>
      <tr>

        <td><%= link_to mixtape.name, mixtape %></td>
        <td>
          <% mixtape.songs.each do |song| %>
            <%= link_to song.name, song %></br>
          <% end %>
        </td>

          <td><small>
            <%= link_to 'Details', mixtape %> |
            <%= link_to 'Edit', edit_mixtape_path(mixtape) %> |
            <%= link_to 'Delete', mixtape, method: :delete, data: { confirm: 'Are you sure?' } %>

          </small></td>
      </tr>
      <% end %>
    </table>

  </div>
</div>