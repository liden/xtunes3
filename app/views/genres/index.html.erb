<div class="pull-right">
  <small><%= link_to 'Add a genre', new_genre_path %> </small>
</div>

<div>
  <h4>xTunes Genres</h4>

  <div class="row-fluid" "span12">

    <table class="table table-condensed table-hover">
      <thead>
        <tr>
          <th>Genre</th>
          <th>Song</th>
          <th>Artist</th>
          <th></th>
        </tr>
      </thead>

      <% @genres.each do |genre| %>
      <tr>

          <td><%= link_to genre.name, genre %></td>

        <td>
          <% genre.songs.each do |song| %>
            <%= link_to song.name, song %><br/>
          <% end %>
        </td>

        <td>

        </td>

        <td><small>
          <%= link_to 'Details', genre %> |
          <%= link_to 'Edit', edit_genre_path(genre) %> |
          <%= link_to 'Delete', genre, method: :delete, data: { confirm: 'Are you sure?' } %>
        </small></td>

      </tr>
      <% end %>
    </table>

  </div>
</div>