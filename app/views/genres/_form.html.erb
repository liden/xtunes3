<%= simple_form_for @genre, :html => { :class => 'form-inline' } do |f| %>

  <%= f.error_notification %>

  <%= f.input_field :name %>
  <%= f.hint 'Please see http://www.id3.org before adding or updating genres.' %>

  <br />

  <%= f.submit :class => 'btn btn-warning' %>
  <%= link_to 'cancel', genres_path, :class => 'btn' %>

<% end %>