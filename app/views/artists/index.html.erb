<h1>Artists Listing</h1>

<table>
  <tr>
    <th></th>
    <th>Artist</th>
    <th>Song</th>
    <th>Album</th>
  </tr>

<% @artists.each do |artist| %>
  <tr>
    <td><%= artist.photo %></td>
    <td><%= link_to artist.name, artist %></td>

    <td><ul><% artist.songs.each do |song| %>
        <li><%= link_to song.name, song %></li>
        <% end %></ul>
    </td>


  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Artist', new_artist_path %>