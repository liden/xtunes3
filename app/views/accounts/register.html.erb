
<%= form_tag '/register' do %>

  <%= label_tag 'name' %>
  <%= text_field_tag 'name[user]' %>

  <%= label_tag 'email' %>
  <%= text_field_tag 'email[user]' %>

  <%= label_tag 'password' %>
  <%= password_field_tag 'password[user]' %>

  <%= label_tag 'password_confirmation' %>
  <%= password_field_tag 'password_confirmation[user]' %>

  <br>
  <%= submit_tag 'Register User' %>

<% end %>