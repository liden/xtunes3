<h1>Albums Listing</h1>

<table>
  <tr>
    <th>Cover</th>
    <th>Name</th>
    <th>Release (Year)</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= link_to (image_tag(album.cover_file, :size => "50x50")), album %></td>
    <td><%= album.name %></td>
    <td><%= album.release_year %></td>
    <td><%= link_to 'Show', album %></td>
    <td><%= link_to 'Edit', edit_album_path(album) %></td>
    <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

