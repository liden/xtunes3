<%= simple_form_for @album, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :release, label: 'Release Date',
    :as => :date, :start_year => 1900,
    :end_year => Date.today.year - 12, :discard_day => false,
    :order => [:day, :month, :year] %>
  <%= f.input :cover_file, label: 'Upload Album Cover' %>
  <%= f.input :remote_cover_file_url, label: 'Album Cover Link' %>

  <%= f.error :base %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-info' %>
    <%= link_to 'cancel', albums_path, :class => 'btn' %>
  </div>

<% end %>