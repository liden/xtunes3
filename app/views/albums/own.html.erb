<div>

  <h4><%= current_user.name %>'s xTunes Songs (by Album)</h4>

  <% @albums.each do |album| %>

  <div class="row-fluid" "span12">

    <div class="span3">

      <%= link_to album.name, album %>

    </div>

    <div class="span9">

      <table class="table table-condensed table-hover">

        <%= render :partial => 'shared/user_table_head' %>

          <% album.songs.each do |song| %>

            <% if (current_user.songs.include?(song)) %>

            <%= render :partial => 'shared/user_song', :locals => {:song => song} %>

            <% end %>

          <% end %>

        </tbody>
      </table>
    </div>

  </div>

  <% end %>

</div>